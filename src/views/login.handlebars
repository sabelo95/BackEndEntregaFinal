<h2>Login usuarios:</h2>
<hr>
<form action="/api/sessions/login" method="post">

    {{#if error}}
        <div style="color: red;">{{error}}</div>
    {{/if}}

    {{#if mensaje}}
        <div style="color: green;">{{mensaje}}</div>
    {{/if}}
    
    <input type="email" name="email" placeholder="email">
    <input type="password" name="password" placeholder="password">
    <br>
    <input type="submit" value="Ingresar">
</form>
<br>
<a href="/api/sessions/github">Acceso con GitHub</a>
<br>
<h2>¿Olvidaste tu contraseña?</h2>
<form action="/api/recovery" method="post">

   

    {{#if mensaje}}
        <div style="color: green;">{{mensajeRecover}}</div>
    {{/if}}
    
    <input type="email" name="email" placeholder="email">
   
    <br>
    <input type="submit" value="Enviar">
</form>
